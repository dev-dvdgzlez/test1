@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Selfie</h2>
<div id="first-step">
    <div class="input-group">
        <label>Name:</label>
        <input type="text" id="name" placeholder="Your name here" />
    </div>
    <div class="input-group">
        <label>Email:</label>
        <input type="text" id="email" placeholder="Your email address" />
    </div>
    <div class="button" id="next-step">Next</div>
</div>
<div id="second-step" class="hide">

</div>
@section Scripts {
    <script src="js/Selfie/script.js"></script>
}