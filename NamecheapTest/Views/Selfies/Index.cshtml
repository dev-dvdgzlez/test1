@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="/css/styles.css" rel="stylesheet" />
}
<h2>Selfie</h2>
<div id="first-step">
    <div class="input-group">
        <label>Name:</label>
        <input type="text" id="name" placeholder="Your name here" />
    </div>
    <div class="input-group">
        <label>Email:</label>
        <input type="text" id="email" placeholder="Your email address" />
    </div>
    <div class="button" id="next-step">Next</div>
</div>
<div id="second-step" class="hide">
    <div class="camera-container">
        <video id="player" controls autoplay></video>
        <button id="capture">Capture</button>
        <canvas id="selfie" width="320" height="240" class="hide"></canvas>
    </div>
</div>
@section Scripts {
    <script src="/js/Selfie/selfie.renderer.js"></script>
    <script src="/js/Selfie/script.js"></script>
}